{
  "manifest_version": 2,

  "name": "Twitch-Chat-Trimming",
  "description": "This extension trims large Twitch chats, so that they are readible",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://www.twitch.tv/"
  ]
}